<div class="container" id="addTaskContainer">
  <div class="row">
    <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 mb-3">
      <form id="formAddTask" class="mb-1">
        <div class="input-group">
          <input type="text" id="textNewTask" class="form-control" autocomplete="off" placeholder="Add a task" required>
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="fa fa-plus"></i></button>
          </span>
        </div>
      </form>
      <div>
        <span class="task-difficulty task-difficulty--hard">Hard</span>&nbsp;
        <span class="task-difficulty task-difficulty--medium task-difficulty--active">Medium</span>&nbsp;
        <span class="task-difficulty task-difficulty--easy">Easy</span>&nbsp;
        <span class="task-difficulty task-difficulty--trivial">Trivial</span>
      </div>
    </div>
  </div>
</div>

<div class="container" id="containerTasks">
  {{#each data}}
    <div class="row row-task pt-2 pb-2">
      <div class="col-8 col-xs-8 col-sm-8 col-md-8 col-lg-8">        
        <div id="rowTask-{{id}}">
          <p class="row-task__task-name" id="taskNameId-{{id}}">{{text}} </p>
          <p class="task-difficulty task-difficulty--{{dificultadClass priority}}">{{dificultad priority}}</p> 
          <p class="row-task__note-task mb-0">{{notes}}</p>
        </div>
        <div id="checklist-{{id}}">
          {{#each checklist}}
          <div class="checkbox ml-2">
            <input id="checkboxId-{{id}}" type="checkbox" class="subtask__checkbox-input" {{#if completed}}checked{{/if}}> 
            <label for="checkboxId-{{id}}" class="subtask__checkbox-label">
              <span class="subtask__checkbox-button"></span>
              {{text}}
            </label>
          </div>
          {{/each}}
        </div>
        
      </div>

      <div class="col-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
        <i id="addSubTaskId-{{id}}" class='fa fa-plus action-buttons addSubTaskId'></i>
      </div>
      <div class="col-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
        <i id="editTaskId-{{id}}" class='fa fa-pencil-square-o action-buttons editTaskId'></i>
      </div>
      <div class="col-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center">
        <i id="deleteTaskId-{{id}}" class='fa fa-trash action-buttons deleteTaskId'></i>
      </div>
      <div class="col-1 col-xs-1 col-sm-1 col-md-1 col-lg-1 text-center vertical-control-jquery-ui">
        <i class='fa fa-arrows-v action-buttons'></i>
      </div>

    </div>
  {{/each}}
</div>



